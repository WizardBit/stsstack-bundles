# This file must contain defaults for all variables used in bundles/ovelays.
# They are used to render to final product in the event they are not provided
# elsewhere. It is inserted into the global context at the start of the
# pipeline.
#
# You can check that none are missing by running lint/check_var_defaults.sh
#
MOD_PARAMS[__CHARM_STORE__]=${MASTER_OPTS[CHARM_STORE]}
if [[ ${MOD_PARAMS[__CHARM_STORE__]} == cs: ]]; then
    # ns only applies to cs:
    MOD_PARAMS[__CHARM_NS__]=~openstack-charmers-next/
    MOD_PARAMS[__CHARM_PREFIX__]=
    MOD_PARAMS[__CHARM_TRACK__]=
    MOD_PARAMS[__CHARM_CHANNEL__]=stable
else
    MOD_PARAMS[__CHARM_NS__]=
    MOD_PARAMS[__CHARM_PREFIX__]=
    MOD_PARAMS[__CHARM_TRACK__]=${MASTER_OPTS[CHARM_TRACK]}
    MOD_PARAMS[__CHARM_CHANNEL__]=${MASTER_OPTS[CHARM_CHANNEL]}
fi

MOD_PARAMS[__OS_ORIGIN__]=$os_origin
MOD_PARAMS[__SOURCE__]=$source
MOD_PARAMS[__NUM_CEPH_MON_UNITS__]=1
MOD_PARAMS[__NUM_CEPH_OSD_UNITS__]=3
MOD_PARAMS[__NUM_CEPH_FS_UNITS__]=1
MOD_PARAMS[__CEPH_INTERFACE__]='ceph-mon'
MOD_PARAMS[__SSL_CA__]=
MOD_PARAMS[__SSL_CERT__]=
MOD_PARAMS[__SSL_KEY__]=
MOD_PARAMS[__NUM_CEPH_RGW_UNITS__]=1
MOD_PARAMS[__NUM_CEPH_PROXY_UNITS__]=1
MOD_PARAMS[__NUM_OSDS_PER_HOST__]=1
