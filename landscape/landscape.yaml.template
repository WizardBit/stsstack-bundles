# -*- mode: yaml -*-
series: __SERIES__

applications:
  ubuntu:
    charm: __CHARM_STORE____CHARM_NS____CHARM_PREFIX__ubuntu
    channel: __CHARM_CHANNEL____CHARM_TRACK__
    num_units: 1
  landscape-server:
    charm: __CHARM_STORE____CHARM_NS____CHARM_PREFIX__landscape-server
    channel: __CHARM_CHANNEL____CHARM_TRACK__
    options:
      install_sources: "['ppa:landscape/__LANDSCAPE_VERSION__']"
    num_units: 1
    constraints: mem=4G
  landscape-rabbitmq-server:
    charm: __CHARM_STORE____CHARM_NS____CHARM_PREFIX__rabbitmq-server
    channel: __CHARM_CHANNEL____CHARM_RABBIT_TRACK__
    num_units: 1
  landscape-postgresql:
    charm: __CHARM_STORE____CHARM_NS____CHARM_PREFIX__postgresql
    channel: __CHARM_CHANNEL____CHARM_TRACK__
    options:
      extra_packages: python-apt postgresql-contrib postgresql-.*-debversion postgresql-plpython-.*
      max_connections: 500
      max_prepared_transactions: 500
    num_units: 1
  landscape-haproxy:
    charm: __CHARM_STORE____CHARM_NS____CHARM_PREFIX__haproxy
    channel: __CHARM_CHANNEL____CHARM_TRACK__
    options:
      default_timeouts: "queue 60000, connect 5000, client 120000, server 120000"
      services: ""
      source: backports
      ssl_cert: SELFSIGNED
      global_default_bind_options: "no-tlsv10"
    num_units: 1
  landscape-client:
    charm: __CHARM_STORE____CHARM_NS____CHARM_PREFIX__landscape-client
    channel: __CHARM_CHANNEL____CHARM_TRACK__
    options:
      account-name: "standalone"
      origin: ppa:landscape/__LANDSCAPE_VERSION__
relations:
  - [ landscape-server, landscape-client ]
  - [ landscape-rabbitmq-server, landscape-client ]
  - [ landscape-postgresql, landscape-client ]
  - [ landscape-haproxy, landscape-client ]
  - [ landscape-server, landscape-rabbitmq-server ]
  - [ landscape-server, landscape-haproxy ]
  - [ "landscape-server:db", "landscape-postgresql:db-admin" ]
  - [ ubuntu, landscape-client ]
